{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "0.5",
    "backgroundImage": "${backgroundImageUrl}",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${gameImageUrl}",
                            "altText": "${gameName}",
                            "size": "Stretch"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${action.title}",
                            "color": "Light",
                            "weight": "Bolder",
                            "wrap": true,
                            "size": "default",
                            "horizontalAlignment": "Center"
                        }
                    ]
                }
            ]
        }
    ]
}
