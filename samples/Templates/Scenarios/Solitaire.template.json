{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.5",
	"backgroundImage": "${backgroundImageUrl}",
	"body": [
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"width": 1,
					"items": [
						{
							"type": "Image",
							"url": "${gameImageUrl}",
							"altText": "${gameName}",
							"size": "stretch"
						}
					]
				},
				{
					"type": "Column",
					"width": 1,
					"items": [
						{
							"type": "TextBlock",
							"text": "${action.title}",
							"color": "light",
							"weight": "bolder",
							"wrap": true,
							"size": "default",
							"horizontalAlignment": "center",
							"style": "heading"
						}
					]
				}
			]
		}
	]
}
