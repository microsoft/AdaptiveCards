{
    "type": "message",
    "attachments": [
        {
            "contentType": "application/vnd.microsoft.card.adaptive",
            "content": {
                "type": "AdaptiveCard",
                "version": "0.5",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "Excellent, {{number_of_people}} of your best buds!",
                        "wrap": true
                    },
                    {
                        "type": "TextBlock",
                        "text": "What date would you like to scuba?",
                        "wrap": true
                    },
                    {
                        "type": "TextBlock",
                        "text": "(NOTE: Your party must arrive by 10:00 AM and should plan on diving until 4 PM)",
                        "size": "small",
                        "wrap": true
                    },
                    {
                        "type": "Input.Date",
                        "id": "date"
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Next"
                    }
                ]
            }
        }
    ]
}