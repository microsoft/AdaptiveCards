						"type": "AdaptiveCard",
						"body": [
							{
								"type": "Container",
								"id": "id2",
								"items": [
									{
										"type": "ActionSet",
										"actions": [
											{
												"type": "Action.ToggleVisibility",
												"title": "Action.ToggleVisibility",
												"targetElements": ["date"]
