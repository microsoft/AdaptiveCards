{
	"type": "AdaptiveCard",
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
		{
			"type": "Input.Text",
			"id": "id0",
			"style": "password",
			"label": "Input.Text With Password Style",
			"regex": "^.{8,20}$",
			"errorMessage": "Password must be between 8 and 20 characters"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}
