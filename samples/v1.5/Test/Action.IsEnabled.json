{
	"type": "AdaptiveCard",
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
		{
			"type": "Image",
			"url": "https://adaptivecards.io/content/cats/1.png",
			"size": "Medium",
			"selectAction": {
				"type": "Action.Submit",
				"isEnabled": false
			}
		},
		{
			"type": "Input.Text",
			"placeholder": "Placeholder text",
			"id": "IsEnabledInputId",
			"inlineAction": {
				"type": "Action.Submit",
				"title": "Disabled",
				"isEnabled": false
			}
		},
		{
			"type": "RichTextBlock",
			"inlines": [
				{
					"type": "TextRun",
					"text": "Do not click "
				},
				{
					"type": "TextRun",
					"text": "here",
					"selectAction": {
						"type": "Action.Submit",
						"isEnabled": false
					}
				},
				{
					"type": "TextRun",
					"text": ", as it is disabled."
				}
			]
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "Disabled",
			"isEnabled": false
		},
		{
			"type": "Action.Submit",
			"title": "Enabled (explicit)",
			"isEnabled": true
		},
		{
			"type": "Action.Submit",
			"title": "Enabled (by default)"
		}
	]
}
