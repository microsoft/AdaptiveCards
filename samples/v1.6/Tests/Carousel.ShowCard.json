{
	"type": "AdaptiveCard",
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.6",
	"body": [
		{
			"type": "TextBlock",
			"text": "Carousel In Action.ShowCard",
			"wrap": true,
			"style": "heading",
			"horizontalAlignment": "Center"
		}
	],
	"actions": [
		{
			"type": "Action.ShowCard",
			"title": "Expand",
			"card": {
				"type": "AdaptiveCard",
				"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
				"version": "1.6",
				"body": [
					{
						"type": "Container",
						"items": [
							{
								"type": "Container",
								"items": [
									{
										"type": "Carousel",
										"rtl": false,
										"pages": [
											{
												"type": "CarouselPage",
												"rtl": false,
												"items": [
													{
														"type": "Image",
														"url": "https://adaptivecards.io/content/cats/1.png",
														"altText": "Cat"
													}
												]
											},
											{
												"type": "CarouselPage",
												"items": [
													{
														"type": "Image",
														"url": "https://adaptivecards.io/content/cats/2.png",
														"altText": "Cat"
													}
												],
												"rtl": false
											}
										]
									}
								],
								"selectAction": {
									"type": "Action.OpenUrl",
									"url": "https://adaptivecards.io",
									"title": "Container Level 2 Select Action"
								}
							}
						]
					}
				]
			}
		}
	]
}
