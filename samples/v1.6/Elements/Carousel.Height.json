{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.6",
	"body": [
		{
			"type": "Carousel",
			"height": "stretch",
			"pages": [
				{
					"type": "CarouselPage",
					"id": "firstPage",
					"items": [
						{
							"type": "Image",
							"url": "https://picsum.photos/id/100/300/300",
							"altText": "beach"
						}
					],
					"rtl": false
				},
				{
					"type": "CarouselPage",
					"id": "secondPage",
					"items": [
						{
							"type": "Image",
							"url": "https://picsum.photos/id/110/300/300",
							"altText": "sunset"
						}
					],
					"rtl": false
				}
			],
			"rtl": false
		},
		{
			"type": "TextBlock",
			"text": "Carousel fills its parent view if its height is set to *stretch*",
			"wrap": true,
			"spacing": "large"
		}
	]
}
