{
	"type": "AdaptiveCard",
	"version": "1.6",
	"body": [
		{
			"type": "Input.Text",
			"id": "inputProduct",
			"value": "Cosmetics",
			"label": "Product Name",
			"labelPosition": "inline",
			"labelWidth": 40
		},
		{
			"type": "Input.Date",
			"id": "inputDate",
			"value": "2017-10-12",
			"label": "Est. Delivery",
			"labelPosition": "inline",
			"labelWidth": "60px"
		},
		{
			"type": "Input.Number",
			"id": "inputAmount",
			"value": 500,
			"label": "Est. Amount",
			"labelPosition": "inline"
		},
		{
			"type": "Input.Time",
			"id": "inputTime",
			"value": "15:30",
			"label": "Est. Time",
			"labelPosition": "inline",
			"labelWidth": "50px"
		},
		{
			"type": "Input.Toggle",
			"id": "acceptTerms",
			"title": "I accept the terms and agreements",
			"value": "true",
			"valueOn": "true",
			"valueOff": "false",
			"label": "Please check the box:",
			"labelPosition": "inline"
		},
		{
			"type": "Input.ChoiceSet",
			"id": "itemColor",
			"style": "compact",
			"labelPosition": "inline",
			"label": "Select color",
			"isMultiSelect": false,
			"value": "1",
			"choices": [
				{
					"title": "Red",
					"value": "1"
				},
				{
					"title": "Green",
					"value": "2"
				},
				{
					"title": "Blue",
					"value": "3"
				}
			]
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "Save",
			"associatedInputs": "auto",
			"disabledUnlessAssociatedInputsChange": true
		},
		{
			"type": "Action.OpenUrl",
			"title": "Learn More",
			"url": "https://github.com/Microsoft/AdaptiveCards"
		}
	]
}