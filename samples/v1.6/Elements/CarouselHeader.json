{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.6",
	"body": {
		"type": "Carousel",
		"header": [
			{
				"type": "TextBlock",
				"text": "Photo Album",
				"size": "ExtraLarge",
				"style": "heading",
				"horizontalAlignment": "Center"
			},
			{
				"text": "Landscapes",
				"size": "Large",
				"horizontalAlignment": "Center"
			}
		],
		"spacing": "Small",
		"pages": [
			{
				"type": "CarouselPage",
				"id": "firstPage",
				"items": [
					{
						"type": "Image",
						"url": "https://picsum.photos/id/100/300/300",
						"altText": "beach"
					}
				]
			},
			{
				"type": "CarouselPage",
				"id": "secondPage",
				"items": [
					{
						"type": "Image",
						"url": "https://picsum.photos/id/110/300/300",
						"altText": "sunset"
					}
				]
			},
			{
				"type": "CarouselPage",
				"id": "thirdPage",
				"items": [
					{
						"type": "Image",
						"url": "https://picsum.photos/id/120/300/300",
						"altText": "starlit night sky"
					}
				]
			}
		]
	}
}
