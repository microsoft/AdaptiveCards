{
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "TextBlock",
			"text": "Name:"
		},
		{
			"type": "Input.Text",
			"placeholder": "First Last",
			"id": "name",
			"isRequired": true
		},
		{
			"type": "TextBlock",
			"text": "Please fill in the required information for your selected option:",
			"wrap": true
		},
		{
			"type": "ColumnSet",
			"separator": true,
			"columns": [
				{
					"type": "Column",
					"id": "option1",
					"width": "stretch",
					"items": [
						{
							"type": "TextBlock",
							"text": "Option 1",
							"size": "Large"
						},
						{
							"type": "Input.Text",
							"placeholder": "Option1 info",
							"id": "one",
							"isRequired": true
						},
						{
							"type": "Input.Text",
							"placeholder": "Option1 info",
							"id": "two"
						},
						{
							"type": "ActionSet",
							"actions": [
								{
									"type": "Action.Submit",
									"title": "Option 1",
									"associatedInputIds": [ "name", "option1" ]
								}
							]
						}
					]
				},
				{
					"type": "Column",
					"id": "option2",
					"width": "stretch",
					"separator": true,
					"items": [
						{
							"type": "TextBlock",
							"text": "Option 2",
							"size": "Large"
						},
						{
							"type": "Input.Text",
							"placeholder": "Option2 info",
							"id": "three",
							"isRequired": true
						},
						{
							"type": "Input.Text",
							"placeholder": "Option2 info",
							"id": "four"
						},
						{
							"type": "ActionSet",
							"actions": [
								{
									"type": "Action.Submit",
									"title": "Option 2",
									"associatedInputIds": [ "name", "option2" ]
								}
							]
						}
					]
				}
			]
		}
	],
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}
