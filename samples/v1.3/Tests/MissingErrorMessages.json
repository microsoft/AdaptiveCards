{	"type": "AdaptiveCard",	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",	"version": "1.2",	"body": [		{			"type": "TextBlock",			"text": "This card contains 16 inputs that use input validation properties, but do not contain error messages. The renderer should return an error message for each input whose validation is enforced by input validation.",			"wrap": true		},		{			"type": "Input.Text",			"label": "Required Input.Text",			"isRequired": true,			"id": "requiredText"		},		{			"type": "Input.Text",			"label": "MaxLength Input.Text",			"maxLength": 5,			"id": "maxLength"		},		{			"type": "Input.Text",			"label": "RegEx Input.Text",			"regex": "([A-Z])\\w+",			"id": "regExText"		},		{			"type": "Input.Date",			"label": "Required Input.Date",			"id": "requiredDate",			"isRequired": true		},		{			"type": "Input.Date",			"label": "Min Input.Date",			"id": "minDate",			"min": "2012-07-04"		},		{			"type": "Input.Date",			"label": "Max Input.Date",			"id": "maxDate",			"max": "2015-09-16"		},		{			"type": "Input.Time",			"label": "Required Input.Time",			"id": "requiredTime",			"isRequired": true		},		{			"type": "Input.Time",			"label": "Min Input.Time",			"id": "minTime",			"min": "08:00"		},		{			"type": "Input.Time",			"label": "Max Input.Time",			"id": "maxTime",			"max": "20:00"		},		{			"type": "Input.Number",			"label": "Required Input.Number",			"id": "requiredNumber",			"isRequired": true		},		{			"type": "Input.Number",			"label": "Min Input.Number",			"id": "minNumber",			"min": 4		},		{			"type": "Input.Number",			"label": "Max Input.Number",			"id": "maxNumber",			"max": 8		},		{			"type": "Input.ChoiceSet",			"label": "Required Compact Input.ChoiceSet",			"choices": [				{					"title": "Thing 1",					"value": "Thing 1"				},				{					"title": "Thing 2",					"value": "Thing 2"				}			],			"isRequired": true,			"id": "compact"		},		{			"type": "Input.ChoiceSet",			"label": "Required Expanded Input.ChoiceSet",			"choices": [				{					"title": "Thing 1",					"value": "Thing 1"				},				{					"title": "Thing 2",					"value": "Thing 2"				}			],			"isRequired": true,			"style": "expanded",			"id": "expanded"		},		{			"type": "Input.ChoiceSet",			"label": "Required Multiselect Input.ChoiceSet",			"choices": [				{					"title": "Thing 1",					"value": "Thing 1"				},				{					"title": "Thing 2",					"value": "Thing 2"				}			],			"isRequired": true,			"isMultiSelect": true,			"style": "expanded",			"id": "multiselect"		},		{			"type": "Input.Toggle",			"title": "Required Input.Toggle",			"label": "Required Input.Toggle",			"id": "toggle",			"isRequired": true		}	],	"actions": [		{			"type": "Action.Submit",			"title": "Action.Submit"		}	]}