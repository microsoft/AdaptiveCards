{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "TextBlock",
			"text": "Specify the type of text being requested:",
			"style": "heading"
		},
		{
			"type": "Input.Text",
			"id": "myComment",
			"label": "style: text",
			"style": "text"
		},
		{
			"type": "Input.Text",
			"id": "myEmail",
			"label": "style: email",
			"style": "email"
		},
		{
			"type": "Input.Text",
			"id": "myTel",
			"label": "style: tel",
			"style": "tel"
		},
		{
			"type": "Input.Text",
			"id": "myUrl",
			"label": "style: url",
			"style": "url"
		},
		{
			"type": "Input.Text",
			"id": "myPassword",
			"label": "style: password",
			"style": "password"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}
