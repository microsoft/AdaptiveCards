{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Lernpaket: All quiz types",
                            "wrap": true,
                            "fontType": "Default",
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "2/5",
                            "fontType": "Default",
                            "size": "Small",
                            "horizontalAlignment": "Right"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "What city do The Beatles come from?",
            "height": "stretch",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "width": "auto",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "A",
                                    "data": {
                                        "msteams": {
                                            "type": "messageBack",
                                            "displayText": "answerLetter",
                                            "value": {
                                                "action": "answerQuiz",
                                                "previousQuizId": "question.id",
                                                "previousQuizAnswerId": "answer.id",
                                                "previousQuizAnswers": "question.id"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "Medium",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Liverpool",
                            "wrap": true
                        }
                    ]
                }
            ],
            "style": "default",
            "spacing": "Medium"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "width": "auto",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "B",
                                    "data": {
                                        "msteams": {
                                            "type": "messageBack",
                                            "displayText": "answerLetter",
                                            "value": {
                                                "action": "answerQuiz",
                                                "previousQuizId": "question.id",
                                                "previousQuizAnswerId": "answer.id",
                                                "previousQuizAnswers": "question.id"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "Medium",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Edinburgh",
                            "wrap": true
                        }
                    ]
                }
            ],
            "style": "default",
            "spacing": "Medium"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "width": "auto",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "C",
                                    "data": {
                                        "msteams": {
                                            "type": "messageBack",
                                            "displayText": "answerLetter",
                                            "value": {
                                                "action": "answerQuiz",
                                                "previousQuizId": "question.id",
                                                "previousQuizAnswerId": "answer.id",
                                                "previousQuizAnswers": "question.id"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "Medium",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "London",
                            "wrap": true
                        }
                    ]
                }
            ],
            "style": "default",
            "spacing": "Medium"
        }
    ]
}
