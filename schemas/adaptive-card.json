      "enum": [
        "default",
        "none",
        "strong"
      ]
    },
    "TextInputStyle": {
      "type": "string",
      "description": "Style hint for Input.Text.",
      "enum": [
        "text",
        "tel",
        "url",
        "email"
      ]
    }
  }
}
