{
	"name": "adaptivecards-visualizer",
	"version": "1.3.1",
	"description": "Adaptive Card Visualizer for HTML renderer",
	"author": "AdaptiveCards",
	"license": "MIT",
	"main": "lib/app.js",
	"private": true,
	"scripts": {
		"clean": "rimraf lib dist",
		"prebuild": "tsc",
		"prebuild-css": "node-sass ./scss/ -o ./css --output-style expanded",
		"build-css": "postcss ./css/*.css --use autoprefixer --replace --no-map",
		"build": "webpack",
		"watch": "webpack --watch",
		"start": "webpack-dev-server --open",
		"lint": "eslint src/**/*.ts",
		"release": "npm run clean && npm run build && webpack --mode=production"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"adaptivecards": "^3.0.0-alpha.0",
		"eslint": "^7.3.1",
		"markdown-it": "^8.4.0",
		"monaco-editor": "^0.20.0",
		"rimraf": "^3.0.2",
		"typescript": "^3.9.5",
		"vkbeautify": "^0.99.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	}
}
