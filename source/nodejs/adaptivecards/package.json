{
	"name": "adaptivecards",
	"version": "2.11.0-alpha.0",
	"description": "Adaptive Cards Javascript library for HTML Clients",
	"author": "AdaptiveCards",
	"license": "MIT",
	"homepage": "https://adaptivecards.io",
	"keywords": [
		"adaptivecards",
		"adaptive",
		"cards",
		"microsoft",
		"bot"
	],
	"main": "lib/adaptivecards.js",
	"types": "lib/adaptivecards.d.ts",
	"files": [
		"lib",
		"dist",
		"src"
	],
	"scripts": {
		"test": "jest --forceExit --runInBand --detectOpenHandles",
		"clean": "rimraf build lib dist",
		"prebuild": "tsc",
		"build": "webpack",
		"watch": "webpack --watch",
		"start": "webpack-dev-server --open",
		"dts": "dts-generator --prefix adaptivecards --project . --out dist/adaptivecards.d.ts",
		"lint": "eslint src/*.ts",
		"release": "npm run clean && concurrently \"npm:build\" \"webpack --mode=production\" && concurrently \"npm:dts\"",
		"docs": "npx typedoc"
	},
	"repository": {
		"type": "git",
		"url": "git://git@github.com/microsoft/AdaptiveCards.git"
	},
	"devDependencies": {
		"concurrently": "^5.2.0",
		"typedoc": "^0.22.5",
		"typedoc-plugin-markdown": "^3.11.2"
	},
	"jest": {
		"rootDir": "src",
		"roots": [
			"<rootDir>"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/css_stub.ts"
		},
		"modulePaths": [
			"<rootDir>"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleDirectories": [
			"node_modules"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		]
	},
	"dependencies": {
		"swiper": "^7.0.9"
	}
}
