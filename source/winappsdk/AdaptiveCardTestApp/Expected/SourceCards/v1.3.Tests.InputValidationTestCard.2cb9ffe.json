{	"type": "AdaptiveCard",	"version": "1.3",	"body": [		{			"type": "TextBlock",			"text": "Please fill out the following form:",			"size": "Medium",			"wrap": true		},		{			"type": "Input.Text",			"id": "fullName",			"placeholder": "First Last",			"label": "Full Name:",			"isRequired": true,			"errorMessage": "Name is required"		},		{			"type": "Input.Text",			"id": "nickName",			"label": "Nickname:"		},		{			"type": "Input.Number",			"id": "number",			"label": "What's your favorite number?",			"isRequired": true,			"errorMessage": "Favorite number is required"		},		{			"type": "Input.Date",			"id": "dob",			"label": "Date of Birth",			"isRequired": true,			"errorMessage": "Date of birth is required"		},		{			"type": "Input.Date",			"id": "start",			"label": "Start date if known:"		},		{			"type": "Input.Toggle",			"title": "Sign me up!",			"label": "Would you like to join our mailing list?",			"id": "mailingList"		},		{			"type": "Input.Toggle",			"label": "Please agree to the terms of service:",			"title": "I agree",			"id": "termsOfService",			"errorMessage": "You must agree to the terms of service",			"isRequired": true		},		{			"type": "Input.ChoiceSet",			"placeholder": "Select a Choice",			"id": "choiceSet1",			"label": "Please select from the following choices:",			"choices": [				{					"title": "Choice 1",					"value": "Choice 1"				},				{					"title": "Choice 2",					"value": "Choice 2"				}			],			"errorMessage": "You must select a choice",			"isRequired": true		},		{			"type": "Input.ChoiceSet",			"label": "Please select from the following choices:",			"id": "choiceSet2",			"choices": [				{					"title": "Choice 1",					"value": "Choice 1"				},				{					"title": "Choice 2",					"value": "Choice 2"				}			],			"errorMessage": "You must select a choice",			"isRequired": true,			"style": "expanded"		},		{			"type": "Input.ChoiceSet",			"label": "Please select from the following choices:",			"id": "choiceSet3",			"choices": [				{					"title": "Choice 1",					"value": "Choice 1"				},				{					"title": "Choice 2",					"value": "Choice 2"				}			],			"style": "expanded",			"isMultiSelect": true,			"errorMessage": "You must select a choice",			"isRequired": true		}	],	"actions": [		{			"type": "Action.Submit",			"title": "Send!"		}	]}