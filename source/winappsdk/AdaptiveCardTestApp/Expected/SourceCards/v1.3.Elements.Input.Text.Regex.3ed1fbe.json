{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"inputNecessityIndicators": "none",
	"version": "1.3",
	"body": [
		{
			"type": "TextBlock",
			"text": "This input is required and has a regex"
		},
		{
			"type": "Input.Text",
			"id": "input1",
			"isRequired": true,
			"regEx": "([A-Z])\\w+"
		},
		{
			"type": "TextBlock",
			"text": "This input is optional and has a regex"
		},
		{
			"type": "Input.Text",
			"id": "input2",
			"isRequired": false,
			"regEx": "([A-Z])\\w+"
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK"
		}
	]
}
