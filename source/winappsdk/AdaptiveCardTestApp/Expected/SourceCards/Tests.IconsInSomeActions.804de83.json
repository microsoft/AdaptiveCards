{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"lang": "en",
	"body": [
		{
			"type": "Container",
			"items": [
				{
					"type": "ColumnSet",
					"columns": [
						{
							"type": "Column",
							"width": "auto",
							"items": [
								{
									"type": "Image",
									"url": "https://maxcdn.icons8.com/Share/icon/p1em/Time_And_Date/calendar1600.png",
									"size": "small"
								}
							]
						},
						{
							"type": "Column",
							"width": "stretch",
							"items": [
								{
									"type": "TextBlock",
									"text": "Image buttons",
									"weight": "bolder",
									"wrap": true
								},
								{
									"type": "TextBlock",
									"spacing": "none",
									"text": "Adaptive Cards",
									"isSubtle": true,
									"wrap": true
								},
								{
									"type": "TextBlock",
									"spacing": "none",
									"text": "{{TIME(2017-02-14T17:11:39Z)}} - {{TIME(2017-02-14T17:41:39Z)}}",
									"isSubtle": true,
									"wrap": true
								}
							]
						}
					]
				}
			]
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "Snooze for",
					"wrap": true
				},
				{
					"type": "Input.ChoiceSet",
					"id": "snoozeFor",
					"style": "compact",
					"isMultiSelect": false,
					"value": "1",
					"choices": [
						{
							"title": "5 minutes",
							"value": "1"
						},
						{
							"title": "30 minutes",
							"value": "2"
						},
						{
							"title": "1 hour",
							"value": "3"
						}
					]
				}
			]
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "Snooze",
			"iconUrl": "https://cdn1.iconfinder.com/data/icons/office-22/48/alarm-clock-512.png",
			"data": {
				"x": "snooze"
			}
		},
		{
			"type": "Action.Submit",
			"title": "Dismiss",
			"iconUrl": "https://cdn2.iconfinder.com/data/icons/lightly-icons/30/close-480.png",
			"data": {
				"icon": "dismiss"
			}
		},
		{
			"type": "Action.Submit",
			"title": "Dismiss",
			"data": {
				"no icon": "dismiss"
			}
		},
		{
			"type": "Action.Submit",
			"title": "Dismiss",
			"iconUrl": "https://cdn2.iconfinder.com/data/icons/lightly-icons/30/close-480.png",
			"data": {
				"2nd icon": "dismiss"
			}
		}
	]
}
