{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "TextBlock",
			"text": "Here are some required inputs"
		},
		{
			"type": "Input.Text",
			"id": "input1",
			"isRequired": true
		},
		{
			"type": "Input.Text",
			"id": "input2",
			"isRequired": true
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"title": "OK",
			"ignoreInputValidation": false
		},
		{
			"type": "Action.Submit",
			"title": "Cancel",
			"ignoreInputValidation": true
		}
	]
}
