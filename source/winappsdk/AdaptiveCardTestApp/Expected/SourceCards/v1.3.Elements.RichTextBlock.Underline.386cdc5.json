{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.3",
	"body": [
		{
			"type": "RichTextBlock",
			"inlines": [
				"This is the first inline. ",
				{
					"type": "TextRun",
					"text": "This inline has default underline value. "
				},
				{
					"type": "TextRun",
					"text": "This inline must have underline. ",
					"underline": true
				},
				{
					"type": "TextRun",
					"text": "This inline must not have underline. ",
					"underline": false
				}
			]
		}
	]
}