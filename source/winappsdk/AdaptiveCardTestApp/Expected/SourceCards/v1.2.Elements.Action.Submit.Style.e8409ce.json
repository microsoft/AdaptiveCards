{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.2",
	"body": [
		{
			"type": "TextBlock",
			"text": "This card has four Submit actions. The styles from left to right are \"Default\", \"Positive\", \"Destructive\" and \"Other\".",
			"wrap": true
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"style": "default",
			"title": "Default"
		},
		{
			"type": "Action.Submit",
			"style": "positive",
			"title": "Pawsitive"
		},
		{
			"type": "Action.Submit",
			"style": "destructive",
			"title": "Destructive"
		},
		{
			"type": "Action.Submit",
			"style": "other",
			"title": "Other"
		}
	]
}
