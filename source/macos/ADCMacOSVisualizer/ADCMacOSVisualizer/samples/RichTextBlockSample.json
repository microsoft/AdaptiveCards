{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "This is the first inline. "
                },
                {
                    "type": "TextRun",
                    "text": "We support colors,",
                    "color": "Good"
                },
                {
                    "type": "TextRun",
                    "text": " both regular and subtle. ",
                    "isSubtle": true
                },
                {
                    "type": "TextRun",
                    "text": "Text ",
                    "size": "Small"
                },
                {
                    "type": "TextRun",
                    "text": "of ",
                    "size": "Medium"
                },
                {
                    "type": "TextRun",
                    "text": "all ",
                    "size": "Large"
                },
                {
                    "type": "TextRun",
                    "text": "sizes! ",
                    "size": "ExtraLarge"
                },
                {
                    "type": "TextRun",
